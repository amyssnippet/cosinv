# CosInv Backend Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# Database - PostgreSQL (Primary)
# ===========================================
DATABASE_URL=postgresql://cosinv:cosinv_secret@localhost:5432/cosinv_db
POSTGRES_USER=cosinv
POSTGRES_PASSWORD=cosinv_secret
POSTGRES_DB=cosinv_db

# ===========================================
# Redis - Message Queue & Caching
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=YOUR_JWT_SECRET
JWT_EXPIRES_IN=24h

# ===========================================
# OAuth Providers
# ===========================================
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn OAuth - https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===========================================
# AI Services
# ===========================================
# Google Gemini - https://aistudio.google.com/
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY

# Deepgram STT - https://console.deepgram.com/
DEEPGRAM_API_KEY=YOUR_DEEPGRAM_API_KEY_HERE

# DigitalOcean Llama (Legacy)
OLLAMA_BASE_URL=https://inference.do-ai.run/v1
OLLAMA_MODEL=llama3-8b-instruct
OLLAMA_API_KEY=YOUR_DIGITALOCEAN_API_TOKEN_HERE

# ===========================================
# Email (Nodemailer)
# ===========================================
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=YOUR_EMAIL_USER
EMAIL_PASS=YOUR_SMTP_PASSWORD
EMAIL_FROM=YOUR_EMAIL_FROM
TEST_EMAIL_RECIPIENT=YOUR_TEST_EMAIL

# ===========================================
# Interview Engine (Python FastAPI)
# ===========================================
INTERVIEW_ENGINE_URL=http://localhost:8000

# ===========================================
# Frontend URLs (for CORS)
# ===========================================
FRONTEND_URL=http://localhost:5173
HR_FRONTEND_URL=http://localhost:5174

# ===========================================
# MongoDB (Legacy - for migration only)
# ===========================================
MONGO_URI=YOUR_MONGO_URI
